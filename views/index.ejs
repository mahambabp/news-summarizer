<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Dynamic title based on category -->
    <title>
      <%= category.charAt(0).toUpperCase() + category.slice(1) %> News -
      QuickDigest | Summarized News for Quick Reading
    </title>

    <!-- Meta description -->
    <meta
      name="description"
      content="QuickDigest provides quick summaries of <%= category %> news articles. Stay updated with the latest news, briefed for easy reading."
    />

    <!-- Open Graph Meta Tags for Facebook and LinkedIn -->
    <meta
      property="og:title"
      content="QuickDigest - Summarized <%= category %> News"
    />
    <meta
      property="og:description"
      content="Stay updated with the latest <%= category %> news summarized for quick reading."
    />
    <meta property="og:url" content="https://quickdigest.com/<%= category %>" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/path/to/image.jpg" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="QuickDigest - Summarized <%= category %> News"
    />
    <meta
      name="twitter:description"
      content="Summarized <%= category %> news articles for quick reading."
    />
    <meta name="twitter:image" content="/path/to/image.jpg" />

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/styles.css" />

    <!-- Structured Data for SEO (Schema.org) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "QuickDigest - Summarized News",
        "description": "QuickDigest provides quick summaries of <%= category %> news articles. Stay updated with the latest news, briefed for easy reading.",
        "mainEntity": {
          "@type": "NewsArticle",
          "headline": "QuickDigest: Summarized <%= category %> News",
          "articleBody": "Summarized <%= category %> news articles",
          "datePublished": "<%= new Date().toISOString() %>",
          "author": {
            "@type": "Organization",
            "name": "QuickDigest"
          },
          "publisher": {
            "@type": "Organization",
            "name": "QuickDigest",
            "logo": {
              "@type": "ImageObject",
              "url": "/path/to/logo.png"
            }
          }
        }
      }
    </script>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <!-- Header with the main H1 -->
    <header class="bg-gray-600 text-white p-6">
      <div class="container mx-auto">
        <h1 class="text-3xl font-bold">
          QuickDigest - Summarized News for Quick Reading
        </h1>
        <p class="mt-2">
          Your quick source for summarized <%= category %> news articles.
        </p>
      </div>
    </header>

    <!-- Category Selector (Navigation) -->
    <nav class="bg-gray-700 text-white py-4">
      <div class="container mx-auto flex justify-center space-x-4">
        <a
          href="/general"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'general' ? 'bg-blue-800' : '' %>"
          >General</a
        >
        <a
          href="/business"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'business' ? 'bg-blue-800' : '' %>"
          >Business</a
        >
        <a
          href="/entertainment"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'entertainment' ? 'bg-blue-800' : '' %>"
          >Entertainment</a
        >
        <a
          href="/health"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'health' ? 'bg-blue-800' : '' %>"
          >Health</a
        >
        <a
          href="/science"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'science' ? 'bg-blue-800' : '' %>"
          >Science</a
        >
        <a
          href="/sports"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'sports' ? 'bg-blue-800' : '' %>"
          >Sports</a
        >
        <a
          href="/technology"
          class="px-4 py-2 rounded-md hover:bg-blue-500 <%= category === 'technology' ? 'bg-blue-800' : '' %>"
          >Technology</a
        >
      </div>
    </nav>

    <!-- Main Content Area -->
    <main class="container mx-auto py-10">
      <!-- Dynamic Category Heading as H2 -->
      <h2 class="text-2xl font-semibold text-center mb-8">
        <%= category.charAt(0).toUpperCase() + category.slice(1) %> News Related
      </h2>

      <!-- News Articles Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% articles.forEach(article => { %>
        <article class="bg-white shadow-md rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-4"><%= article.title %></h3>
          <p class="text-gray-700 mb-4"><%= article.summary %></p>
          <a
            href="<%= article.link %>"
            target="_blank"
            class="text-blue-600 hover:text-blue-800 font-medium"
            >Read more</a
          >
        </article>
        <% }) %>
      </div>

      <!-- Pagination Controls -->
      <div class="flex justify-center mt-10">
        <% if (page > 1) { %>
        <a
          href="/<%= category %>?page=<%= page - 1 %>"
          class="px-4 py-2 bg-blue-500 text-white rounded-md mr-2"
          >Previous</a
        >
        <% } %>
        <a
          href="/<%= category %>?page=<%= page + 1 %>"
          class="px-4 py-2 bg-blue-500 text-white rounded-md"
          >Next</a
        >
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-6">
      <div class="container mx-auto text-center">Â© 2024 QuickDigest</div>
    </footer>
  </body>
</html>
